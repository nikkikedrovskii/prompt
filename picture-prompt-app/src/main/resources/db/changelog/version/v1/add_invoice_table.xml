<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_invoice_table" author="nkedrovskii">
        <createSequence sequenceName="invoice_id_seq" startValue="1000"/>
        <createTable tableName="invoice">
            <column name="id" type="BIGINT" defaultValueSequenceNext="invoice_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="invoice_id"/>
            </column>
            <column name="external_invoice_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="order_details_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="order_details_id"
                                 baseTableName="invoice"
                                 constraintName="invoice_order_details_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="order_details"/>
    </changeSet>
</databaseChangeLog>
