<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_price_table" author="nkedrovskii">
        <createSequence sequenceName="price_id_seq" startValue="1"/>
        <createTable tableName="price">
            <column name="id" type="BIGINT" defaultValueSequenceNext="price_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="price_id"/>
            </column>
            <column name="resolution" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="default_price" type="numeric(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="individual_price" type="numeric(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="cart_item"
                                 baseColumnNames="price_id"
                                 constraintName="cart_item_price_fk"
                                 referencedTableName="price"
                                 referencedColumnNames="id"/>
        <insert tableName="price">
            <column name="resolution">256x256</column>
            <column name="default_price">35</column>
            <column name="individual_price">45</column>
        </insert>
        <insert tableName="price">
            <column name="resolution">512x512</column>
            <column name="default_price">45</column>
            <column name="individual_price">55</column>
        </insert>
        <insert tableName="price">
            <column name="resolution">1024x1024</column>
            <column name="default_price">55</column>
            <column name="individual_price">65</column>
        </insert>
    </changeSet>

</databaseChangeLog>
