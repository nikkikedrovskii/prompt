<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_tag_table" author="nkedrovskii">
        <createSequence sequenceName="tag_id_seq" startValue="500"/>
       <createTable tableName="tag" >
           <column name="id" type="bigint" defaultValueSequenceNext="tag_id_seq">
               <constraints nullable="false" primaryKey="true" primaryKeyName="tag_pk"/>
           </column>
           <column name="tag_name" type="VARCHAR(255)">
               <constraints nullable="false"/>
           </column>
       </createTable>

        <createTable tableName="prompt_tag">
            <column name="prompt_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="prompt_tag"
                columnNames="prompt_id, tag_id"
                constraintName="prompt_tag_pk"/>

        <addForeignKeyConstraint baseColumnNames="prompt_id"
                                 baseTableName="prompt_tag"
                                 constraintName="prompt_tag_prompt_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="prompt"/>

        <addForeignKeyConstraint baseColumnNames="tag_id"
                                 baseTableName="prompt_tag"
                                 constraintName="prompt_tag_tag_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
    </changeSet>


</databaseChangeLog>
