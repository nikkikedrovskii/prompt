<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_payment_method_table" author="nkedrovskii">
        <createSequence sequenceName="payment_method_id_seq" startValue="1000"/>
        <createTable tableName="payment_method">
            <column name="id" type="BIGINT" defaultValueSequenceNext="payment_method_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="payment_method_id"/>
            </column>
            <column name="payment_method_name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="payment_method">
            <column name="payment_method_name" value="Platba 24"/>
            <column name="description" value="Fast and secure payment for 'Česká spořitelna' clients. When using it, goods, electronic licences and ebooks are dispatched immediately."/>
        </insert>
    </changeSet>
</databaseChangeLog>
