<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_prompt_in_order_table" author="nkedrovskii">
        <createSequence sequenceName="prompt_in_order_id_seq" startValue="1000"/>
        <createTable tableName="prompt_in_order">
            <column name="id" type="BIGINT" defaultValueSequenceNext="prompt_in_order_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="prompt_in_order_id"/>
            </column>
            <column name="order_details_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="prompt_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="resolution" type="text"/>
            <column name="price_without_vat" type="numeric(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="individual" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="prompt_order_data_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="prompt_in_order"
                                 baseColumnNames="order_details_id"
                                 constraintName="prompt_in_order_order_details_fk"
                                 referencedTableName="order_details"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
