<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_order_status_table" author="nkedrovskii">
        <createSequence sequenceName="order_status_id_seq" startValue="1000"/>
        <createTable tableName="order_status">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_status_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="order_status_id"/>
            </column>
            <column name="status" type="text"/>
            <column name="description" type="text"/>
        </createTable>
        <insert tableName="order_status">
            <column name="status" value="NEW"/>
            <column name="description" value="New order received in the system"/>
        </insert>
        <insert tableName="order_status">
            <column name="status" value="IN_PROGRESS"/>
            <column name="description" value="Order confirmation email sent"/>
        </insert>
        <insert tableName="order_status">
            <column name="status" value="ORDER_PAID"/>
            <column name="description" value="Order confirmation email sent"/>
        </insert>
        <insert tableName="order_status">
            <column name="status" value="INVOICE_SENT"/>
            <column name="description" value="An invoice has been sent"/>
        </insert>
        <insert tableName="order_status">
            <column name="status" value="ORDER_COMPLETED"/>
            <column name="description" value="Order completely finished"/>
        </insert>

        <addForeignKeyConstraint baseTableName="order_details"
                                 baseColumnNames="status_id"
                                 constraintName="order_details_order_state_fk"
                                 referencedTableName="order_status"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
