<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_prompt_order_data_table" author="nkedrovskii">
        <createSequence sequenceName="prompt_order_data_id_seq" startValue="1000"/>
        <createTable tableName="prompt_order_data">
            <column name="id" type="BIGINT" defaultValueSequenceNext="prompt_order_data_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="prompt_order_data_id"/>
            </column>
            <column name="prompt_id" type="bigint"/>
            <column name="prompt_data" type="text"/>
            <column name="prompt_text" type="text"/>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="prompt_in_order"
                                 baseColumnNames="prompt_order_data_id"
                                 constraintName="prompt_in_order_prompt_order_data_fk"
                                 referencedTableName="prompt_order_data"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
