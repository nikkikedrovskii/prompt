<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_order_details_table" author="nkedrovskii">
        <createSequence sequenceName="order_details_id_seq" startValue="1000"/>
        <createTable tableName="order_details">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_details_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="order_details_id"/>
            </column>
            <column name="external_customer_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="vat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="zip_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_phone" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="contact_email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="vat_id"
                                 baseTableName="order_details"
                                 constraintName="order_details_vat_fk"
                                 referencedColumnNames="id"
                                 referencedTableName="vat"/>
    </changeSet>
</databaseChangeLog>
